  $world.get_room(4313).echo("'Hey Bill, you know, same old.  I was just about to start my rounds.'")
endif
if $self.gold() == 17
  $world.get_room(4313).echo("'Well, somebody has to keep the riffraff out.  Glad you're on it.'")
endif
