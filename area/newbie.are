  $world.get_room(4313).echo("'What are you doing out so early?'")
endif
if $self.gold() == 15
  $world.get_room(4313).echo("'Headed over to the Mage Guild, I've got some new apprentices to train.'")
endif
if $self.gold() == 14
  $world.get_room(4313).echo("'Did I see you leaving Grebe's last night with that girl from the temple?'")
endif
if $self.gold() == 13
  $world.get_room(4313).echo("'Oh, yeah, she was cute, right?  We went back to my place.'")
endif
if $self.gold() == 12
  $world.get_room(4313).echo("'No way!  How did that go?'")
endif
if $self.gold() == 11
  $world.get_room(4313).echo("'Well, I thought it was going well.  We sat and talked for a while.'")
endif
if $self.gold() == 10
  $world.get_room(4313).echo("'Yeah?'")
endif
if $self.gold() == 9
  $world.get_room(4313).echo("'Then she told said she wanted to get more comfortable...'")
endif
if $self.gold() == 8
  $world.get_room(4313).echo("'Go on...'")
endif
if $self.gold() == 7
  $world.get_room(4313).echo("'Then she told ME to get more comfortable...'")
endif
if $self.gold() == 6
  $world.get_room(4313).echo("'Yeah??'")
endif
if $self.gold() == 5
  $world.get_room(4313).echo("'So I put on my robe and wizard hat.'")
endif
if $self.gold() == 4
  $world.get_room(4313).echo("'Oh no, Bill!  Not again!'")
endif
if $self.gold() == 3
  $world.get_room(4313).echo("'I know, I know, I don't know why I keep doing that!'")
endif
if $self.gold() == 2
  $world.get_room(4313).echo("'You think she'll ever speak to you again?'")
endif
if $self.gold() == 1
  $world.get_room(4313).echo("You hear footsteps, and the voices fade into the distance.")
endif
drop 1 gold
sac gold
